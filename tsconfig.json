{
	"compilerOptions": {
		/* Basic Options */
		"target": "es2018",
		"module": "commonjs",
		"declaration": true,
		"sourceMap": true,
		"outDir": "./lib/",

		/* Strict Type-Checking Options */
		"strict": true,

		/* Additional Checks */
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,

		/* Module Resolution Options */
		"esModuleInterop": true,

		/* Advanced Options */
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["./src/**/*"]
}
